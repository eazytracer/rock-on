# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# External API URL (how clients access Supabase)
# API_EXTERNAL_URL=http://localhost:54321

# Site URL (your app's URL)
# SITE_URL=http://localhost:5173

# JWT expiry in seconds (default: 1 hour)
JWT_EXPIRY=3600

# =============================================================================
# AUTH SETTINGS
# =============================================================================

# Disable signup (set to true to prevent new registrations)
DISABLE_SIGNUP=false

# Auto-confirm email addresses (true for local dev)
ENABLE_EMAIL_AUTOCONFIRM=true

# Enable email signup
ENABLE_EMAIL_SIGNUP=true

# Enable anonymous users
ENABLE_ANONYMOUS_USERS=false

# Additional redirect URLs for OAuth (comma-separated)
ADDITIONAL_REDIRECT_URLS=

# =============================================================================
# GOOGLE OAUTH (optional)
# =============================================================================

# Google OAuth Client ID
VITE_GOOGLE_CLIENT_ID=mock

